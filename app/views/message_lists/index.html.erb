<p id="notice"><%= notice %></p>

<h1>Message Lists</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Message</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @message_lists.each do |message_list| %>
      <tr>
        <td><%= message_list.title %></td>
        <td><%= message_list.message %></td>
        <td><%= link_to 'Show', message_list %></td>
        <td><%= link_to 'Edit', edit_message_list_path(message_list) %></td>
        <td><%= link_to 'Destroy', message_list, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Message List', new_message_list_path %>
